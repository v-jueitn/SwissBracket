<Window x:Name="StartUpScreen1" x:Class="TestUI.StartUpScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Swiss Bracket" Height="450" Width="350" ResizeMode="NoResize" Icon="zebraIcon.ico">
    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="#FF159BCD" Offset="1"/>
            <GradientStop Color="#FF1A6581" Offset="0.136"/>
        </LinearGradientBrush>
    </Window.Background>
    <Window.BorderBrush>
        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
            <GradientStop Color="Black" Offset="0"/>
            <GradientStop Color="#FF59DEDE" Offset="1"/>
        </LinearGradientBrush>
    </Window.BorderBrush>
    <Grid>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <Label FontSize="18" FontWeight="ExtraBold" HorizontalContentAlignment="Center" >WE HATE ZEBRAS</Label>
            <Button Width="150" Height="30" Margin="0,40,0,10" Click="Button_Click">Start New Tournament</Button>
            <Button Width="150" Height="30" Margin="10">Load Tournament</Button>
        </StackPanel>
    </Grid>
</Window>
